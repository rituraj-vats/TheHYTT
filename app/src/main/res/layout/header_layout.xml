<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/layoutProfilepic"
            android:layout_width="60dp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/drawer_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="openDrawerMenu"
                android:src="@mipmap/menu_close" />

            <LinearLayout
                android:layout_width="1dip"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"

                android:background="@color/black" >
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/srcLocation"
            android:layout_toRightOf="@+id/layoutProfilepic"
            android:layout_toLeftOf="@+id/layoutPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/Msg_GettingLoc"
            android:lines="2"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <LinearLayout
            android:id="@+id/layoutPrice"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginRight="10dip"
                android:background="@color/black" >
            </LinearLayout>

            <TextView
                android:id="@+id/txtPriceValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center_vertical"
                android:text="0.0"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
